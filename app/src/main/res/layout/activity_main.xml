<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
   <GridLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_alignParentTop="true"
       android:layout_alignParentStart="true">

       <Button
           android:id="@+id/fine_btn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_row="0"
           android:layout_rowWeight="1"
           android:layout_column="0"
           android:layout_columnWeight="1"
           android:onClick="buttonTapped"
           android:gravity="fill"
           android:text="i am fine" />

       <Button
           android:id="@+id/howareyou_btn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_column="1"
           android:layout_row="0"
           android:layout_rowWeight="1"
           android:layout_columnWeight="1"
           android:onClick="buttonTapped"
           android:gravity="fill"
           android:text="how are you" />

       <Button
           android:id="@+id/nicetomeetyou_btn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_column="0"
           android:layout_row="1"
           android:layout_rowWeight="1"
           android:layout_columnWeight="1"
           android:onClick="buttonTapped"
           android:gravity="fill"
           android:text="Nice to meet you" />

       <Button
           android:id="@+id/iloveyou_btn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_row="1"
           android:layout_rowWeight="1"
           android:layout_column="1"
           android:layout_columnWeight="1"
           android:onClick="buttonTapped"
           android:gravity="fill"
           android:text="i love you" />

       <Button
           android:id="@+id/ihateyou_btn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_row="2"
           android:layout_rowWeight="1"
           android:layout_column="1"
           android:layout_columnWeight="1"
           android:onClick="buttonTapped"
           android:gravity="fill"
           android:text="i hate you" />

       <Button
           android:id="@+id/goodbye_btn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_row="2"
           android:layout_rowWeight="1"
           android:layout_column="0"
           android:layout_columnWeight="1"
           android:onClick="buttonTapped"
           android:gravity="fill"
           android:text="good bye" />

   </GridLayout>

</RelativeLayout>